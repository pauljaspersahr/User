{
    "C++ Header Guard": {
        "prefix": "headerguard",
        "body": [
            "#ifndef ${1:${TM_FILENAME_BASE/(.*)/${1:/upcase}/}}_H",
            "#define ${1:${TM_FILENAME_BASE/(.*)/${1:/upcase}/}}_H",
            "",
            "$0",
            "",
            "#endif // ${1:${TM_FILENAME_BASE/(.*)/${1:/upcase}/}}_H"
        ],
        "description": "Creates an uppercase header guard for C++ header files based on the filename"
    }
}
